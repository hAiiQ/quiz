generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  username           String              @unique
  displayName        String
  passwordHash       String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  sessions           Session[]
  accounts           Account[]
  verificationTokens VerificationToken[]
  ownedLobbies       Lobby[]             @relation("LobbyOwner")
  participants       LobbyParticipant[]
  selectedQuestions  QuestionState[]     @relation("QuestionSelectedBy")
  resolvedQuestions  QuestionState[]     @relation("QuestionResolvedBy")
  scoreEvents        ScoreEvent[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?

  @@id([identifier, token])
}

model Lobby {
  id         String      @id @default(cuid())
  code       String      @unique
  name       String
  ownerId    String
  owner      User        @relation("LobbyOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  status     LobbyStatus @default(PRE_GAME)
  roundIndex Int         @default(0)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  participants   LobbyParticipant[]
  questionStates QuestionState[]
  buzzerAttempts BuzzerAttempt[]
  scoreEvents    ScoreEvent[]
}

enum LobbyStatus {
  PRE_GAME
  IN_PROGRESS
  COMPLETED
}

model LobbyParticipant {
  id           String           @id @default(cuid())
  lobbyId      String
  userId       String
  seatIndex    Int?
  role         ParticipantRole
  state        ParticipantState @default(ACTIVE)
  score        Int              @default(0)
  lastActiveAt DateTime         @default(now())
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  lobby        Lobby           @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  buzzAttempts BuzzerAttempt[]
  scoreEvents  ScoreEvent[]

  @@unique([lobbyId, userId])
  @@unique([lobbyId, seatIndex])
}

enum ParticipantRole {
  ADMIN
  PLAYER
}

enum ParticipantState {
  ACTIVE
  DISCONNECTED
  ELIMINATED
}

model Question {
  id         String   @id @default(cuid())
  category   String
  categoryIndex Int
  prompt     String
  answer     String
  baseValue  Int
  roundIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  questionStates QuestionState[]
}

model QuestionState {
  id           String            @id @default(cuid())
  lobbyId      String
  questionId   String
  roundIndex   Int
  value        Int
  status       QuestionLifeCycle @default(UNPLAYED)
  selectedById String?
  resolvedById String?
  activatedAt  DateTime?
  timerEndsAt  DateTime?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  lobby        Lobby           @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  question     Question        @relation(fields: [questionId], references: [id], onDelete: Cascade)
  selectedBy   User?           @relation("QuestionSelectedBy", fields: [selectedById], references: [id])
  resolvedBy   User?           @relation("QuestionResolvedBy", fields: [resolvedById], references: [id])
  buzzAttempts BuzzerAttempt[]
  scoreEvents  ScoreEvent[]
}

enum QuestionLifeCycle {
  UNPLAYED
  ACTIVE
  RESOLVED
  DISCARDED
}

model BuzzerAttempt {
  id              String       @id @default(cuid())
  lobbyId         String
  questionStateId String
  participantId   String
  orderIndex      Int
  result          BuzzerResult @default(PENDING)
  createdAt       DateTime     @default(now())

  lobby         Lobby            @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  questionState QuestionState    @relation(fields: [questionStateId], references: [id], onDelete: Cascade)
  participant   LobbyParticipant @relation(fields: [participantId], references: [id], onDelete: Cascade)

  @@unique([questionStateId, participantId])
  @@index([lobbyId, questionStateId])
}

enum BuzzerResult {
  PENDING
  CORRECT
  INCORRECT
  SKIPPED
}

model ScoreEvent {
  id              String   @id @default(cuid())
  lobbyId         String
  participantId   String
  questionStateId String
  delta           Int
  reason          String
  createdAt       DateTime @default(now())

  lobby       Lobby            @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  participant LobbyParticipant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  question    QuestionState    @relation(fields: [questionStateId], references: [id], onDelete: Cascade)
  user        User?            @relation(fields: [userId], references: [id])
  userId      String?
}
